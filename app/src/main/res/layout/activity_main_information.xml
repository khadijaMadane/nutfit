<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_info"
    tools:context=".MainInformation">

    <TextView
        android:id="@+id/attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:text="⚠️ We provide general and informational advice. Please consult a healthcare professional for personalized recommendations and appropriate follow-up based on your individual circumstances!!!" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>