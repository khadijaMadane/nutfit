<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".afficheRepas">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/matrixTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

        </TableLayout>

    </HorizontalScrollView>

    <!-- LinearLayout to hold quantiteList -->
    <LinearLayout
        android:id="@+id/quantiteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextViews for quantiteList will be added dynamically here -->

    </LinearLayout>

    <!-- TextView to display priceTotale -->
    <TextView
        android:id="@+id/priceTotaleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Price Totale"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
